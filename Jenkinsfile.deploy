node {
    checkout scm
}
pipeline {
    agent any
    stages {
        stage('Deploy') {
          steps{
              sh '''
                kubectl apply -f k8s
                kubectl set image deployment/app-deployment udacity-capstone-app="topriddy/udacity-capstone-app:${dockerTag}"
                kubectl get deployments
                kubectl get pods
            '''
          }
        }
    }
}